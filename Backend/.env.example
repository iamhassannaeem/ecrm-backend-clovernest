# Database Configuration
# PostgreSQL (recommended for production)
DATABASE_URL="postgresql://saas_user:saas_password@localhost:5432/saas_db"

# Alternative SQLite for development (uncomment to use SQLite instead)
# DATABASE_URL="file:./dev.db"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# Generate strong secrets for production: https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-here-change-in-production

# OAuth Configuration (Optional)
# Google OAuth - Get credentials from: https://console.developers.google.com/
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - Get credentials from: https://github.com/settings/applications/new
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration (Optional)
# Get credentials from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (Optional)
# Gmail SMTP configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Application URLs
FRONTEND_URL=http://localhost:3000

# Super Admin Configuration
# This email will be granted super admin privileges
SUPER_ADMIN_EMAIL=admin@example.com
